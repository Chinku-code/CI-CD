.build:
  stage: build
  image: 
    name:  registry.dev.sbiepay.sbi:8443/ubi9/gradle-8.9-jdk-21:v6
    pull_policy: always  
  script:
    - pwd
    - ls -la
    - gradlew clean :android_epay:assembleRelease
    - |
      if [ -n "$VERSION" ]; then
        echo "version ${VERSION}"
        gradle build -x test -Pversion=${VERSION}
      else
        gradle build -x test 
      fi
    - ls -lrth
    - ls -lrth build/libs
  artifacts:
    paths:
      - build/libs
    when: on_success 
    expire_in: 1 week
