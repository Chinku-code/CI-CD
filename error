dockerbuild:
  stage: dockerbuild
  script:
    - echo "Building Docker image once for all non-prod"
  rules:
    - if: '$CI_COMMIT_BRANCH =~ /^release\/.*$/'
      when: manual
      variables:
        ENV: nonprod
        IMAGE_REGISTRY: ${SIT_IMAGE_REGISTRY}
        IMAGE_NAME: "${CHART_NAME}"
_________________________________

deploy-sit:
  variables:
    ENV: sit
  rules:
    - if: '$CI_COMMIT_BRANCH =~ /^release\/.*$/'
      when: manual
